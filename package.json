{
  "name": "project-guardian",
  "version": "1.0.0",
  "private": true,
  "description": "FreshFare Foods - Project Guardian backend (recall lifecycle with MongoDB and Kafka)",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
